---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import ProjectGrid from '../components/ProjectGrid.astro';
import SkillsToolkit from '../components/SkillsToolkit.astro';
---

<Layout>
    <Hero />

    <section class="border-t border-neutral-200 bg-neutral-50/50 px-6 py-24 lg:px-8">
        <div class="mx-auto max-w-7xl">
            <div class="mb-16 flex flex-col justify-between gap-6 md:flex-row md:items-end">
                <div class="max-w-2xl">
                    <h2 class="text-3xl font-bold tracking-tight text-neutral-900 sm:text-4xl">
                        Selected Work
                    </h2>
                    <p class="mt-4 text-lg text-neutral-600">
                        A selection of strategic initiatives, data architecture projects, and research partnerships.
                    </p>
                </div>
                <a href="/projects" class="group flex items-center gap-1 font-semibold text-primary transition-colors hover:text-primary/80">
                    View Full Portfolio 
                    <span class="transition-transform group-hover:translate-x-1">â†’</span>
                </a>
            </div>

            <ProjectGrid />
            
        </div>
    </section>

    <SkillsToolkit />
</Layout>
