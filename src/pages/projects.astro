---
import Layout from '../layouts/Layout.astro';
import ProjectGrid from '../components/ProjectGrid.astro';
---

<Layout>
    <main class="mx-auto max-w-7xl px-6 py-16 lg:px-8 lg:py-24">
        <h1 class="mb-16 text-4xl font-semibold leading-tight text-neutral-900 sm:text-5xl lg:text-6xl">
            Portfolio
        </h1>

        <ProjectGrid />

        <section class="mt-24 border-t border-neutral-200 pt-16">
            <h2 class="mb-12 text-3xl font-semibold text-neutral-900 sm:text-4xl">
                Selected Media & Commentary
            </h2>
            <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
                {[
                    { outlet: 'NPR Marketplace', title: "Some colleges opt for 'direct admissions'", url: '#' },
                    { outlet: 'CNBC', title: 'College admission applications spike', url: '#' },
                    { outlet: 'The Brookings Institution', title: 'Complex applications create barriers to college', url: '#' },
                    { outlet: 'Slate', title: 'I Have a Simple Solution to the College Essay Problem', url: '#' },
                    { outlet: 'Inside Higher Ed', title: 'Common App Sees Rise in Minority Applicants', url: '#' },
                    { outlet: 'The 74 Million', title: 'The Path to Quality Child Care Just Became a Little Less Elusive', url: '#' },
                ].map((item) => (
                    <a href={item.url} class="group block rounded-lg border border-neutral-200 p-6 hover:border-primary/50 hover:shadow-sm transition-all">
                        <strong class="block text-sm font-semibold text-neutral-900 mb-1">{item.outlet}</strong>
                        <span class="text-base text-neutral-600 group-hover:text-primary transition-colors">
                            {item.title} â†—
                        </span>
                    </a>
                ))}
            </div>
        </section>
    </main>
</Layout>
