---
// src/components/SkillsToolkit.astro

const skillCategories = [
    {
        title: "Data Science & Analysis",
        skills: [
            "R (tidyverse)",
            "Stata",
            "Python (Pandas/NumPy)",
            "SQL",
            "Causal Inference",
            "Survey Design"
        ]
    },
    {
        title: "Engineering & Web",
        skills: [
            "Astro",
            "React",
            "Tailwind CSS",
            "Git / GitHub",
            "VS Code + Cursor"
        ]
    },
    {
        title: "Platforms & Strategy",
        skills: [
            "Salesforce Education Cloud",
            "Tableau",
            "Financial Modeling",
            "Strategic Planning"
        ]
    },
    {
        title: "AI & Automation",
        skills: [
            "AI System Design",
            "Multi-Agent Orchestration",
            "Workflow Automation",
            "Quality Gates"
        ]
    }
];
---

<section class="py-12 border-t border-secondary/10 bg-gradient-to-b from-background to-secondary/5">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mb-10 max-w-2xl">
            <h2 class="text-2xl font-bold tracking-tight text-neutral-900">Technical Toolkit</h2>
            <p class="mt-2 text-neutral-600">The languages, frameworks, and platforms I use to build systems.</p>
        </div>

        <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-4">
            {skillCategories.map((category) => (
                <div class="rounded-2xl bg-white p-6 shadow-sm ring-1 ring-neutral-200 hover:ring-primary/20 transition-all">
                    <h3 class="mb-4 text-sm font-semibold uppercase tracking-wide text-neutral-500">
                        {category.title}
                    </h3>
                    <ul class="flex flex-wrap gap-2">
                        {category.skills.map((skill) => (
                            <li class="inline-flex items-center rounded-md bg-neutral-100 px-2.5 py-1.5 text-sm font-medium text-neutral-700 hover:bg-primary/10 hover:text-primary transition-colors cursor-default">
                                {skill}
                            </li>
                        ))}
                    </ul>
                </div>
            ))}
        </div>
    </div>
</section>
